<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F0EEEF"
    tools:context="com.example.david.webapp.HomeActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

        <TableRow
            android:id="@+id/persoD"
            android:onClick="rowClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:background="#FFFFFF"
            android:clickable="true">


            <TextView
                android:text="Personal Detail"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/manager"
                android:id="@+id/personal"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/diploma"
                android:background="#048AFB"
                android:gravity="center"
                android:padding="15dp"
                android:text="Education History"
                android:textColor="#fff"
                android:clickable="true"
                android:id="@+id/education" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/employement"
                android:layout_weight="2"
                android:background="#1BBC9B"
                android:gravity="center"
                android:drawableBottom="@drawable/employees"
                android:textColor="#fff"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:clickable="true"
                android:text="Employement History" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_light"
                android:padding="20dp"
                android:drawableBottom="@drawable/plane"
                android:text="Interet Hobbies"
                android:textColor="#fff"
                android:layout_marginTop="6dp"
                android:clickable="true"
                android:id="@+id/interet" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/skill"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:padding="12dp"
                android:text="Skills"
                android:textColor="#FFF"
                android:background="#806E98"
                android:id="@+id/skill" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/hand"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:padding="12dp"
                android:text="References"
                android:textColor="#FFF"
                android:background="#DBDBDB"
                android:id="@+id/ref" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/whiteboard"
                android:gravity="center"
                android:padding="12dp"
                android:text="Project Work"
                android:textColor="#FFF"
                android:background="#F2A735"
                android:layout_marginTop="6dp"
                android:id="@+id/project" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:text="About"
                android:textColor="#FFF"
                android:background="#DBDBDB"
                android:drawableLeft="@drawable/placeholder"
                android:id="@+id/about" />
        </TableRow>
    </TableLayout>
</ScrollView>
