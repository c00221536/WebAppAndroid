<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.webapp.education$PlaceholderFragment">

    <TextView
        android:text="and "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:layout_below="@+id/section_label"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView59" />

    <TextView
        android:text="Bachelor Computer System Management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:gravity="center"
        android:layout_below="@+id/textView59"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView60" />

    <TextView
        android:text="Kilkenny Rd, Moanacurragh, Carlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView57"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textView60"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Erasmus Program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView60"
        android:textSize="30px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView62" />

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45px"
         android:gravity="center"
        android:text="University Diploma of International Studies"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Ireland"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView58"
        android:layout_below="@+id/textView57"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/france"
        android:id="@+id/imageView10"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView58"
        android:layout_toEndOf="@+id/textView59" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/universit"
        android:id="@+id/imageView16"
        android:onClick="uB"
        android:clickable="true"
        android:layout_alignTop="@+id/itC"
        android:layout_toEndOf="@+id/textView58"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/ireland"
        android:id="@+id/imageView11"
        android:layout_alignTop="@+id/imageView10"
        android:layout_toStartOf="@+id/textView59" />

    <ImageView
        android:layout_width="130dp"
        android:onClick="itCarlow"
        android:layout_height="130dp"
        app:srcCompat="@drawable/it_carlow_logo"
        android:id="@+id/itC"
        android:clickable="true"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView11" />

</RelativeLayout>
